<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <CheckBox
        android:id="@+id/grocery_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical">
        <TextView
            android:id="@+id/grocery_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/listitem_default_margin"
            android:textSize="20sp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <Button
        android:id="@+id/grocery_item_decrease_quantity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/minus_string"
        android:focusable="false"/>

    <TextView
        android:id="@+id/grocery_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/grocery_item_increase_quantity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/plus_string"
        android:focusable="false"/>
</LinearLayout>